@model Template.Models.DemandeAttestation

 


@using (Html.BeginForm("Create", "DemandeAttestation",

            FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="card border-light mb-3">
        <div class="card-header">Détail Demande</div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-2"> </div>
                <div class="col-sm-8">
                    <fieldset>

                        <div class="form-group row">
                            <label class="col-sm-2 control-label" for="exampleSelect1">Type </label>
                            <div class="col-sm-10">
                                <select class="form-control" id="exampleSelect1">
                                    <option>Attestation de Travail</option>
                                    <option>Demande Congé</option>
                                    <option>Fiche de paie</option>
                                    <option>Attestation d'hebergement</option>
                                </select>
                            </div>

                        </div>
                        <div class="form-group row">
                            <label for="exampleTextarea" class="col-sm-2 control-label">Motif</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleTextarea" class="col-sm-3 control-label"></label>
                            <div class="col-sm-9" style="float: right">
                                <a href="@Url.Action("Index")" class="btn btn-secondary"  >Retour</a>
                                <button type="submit" class="btn btn-primary"  >Valider</button>
                            </div>
                        </div>


                    </fieldset>
                </div>

            </div>

        </div>
    </div>
    <div class="card border-light mb-3" style="visibility:hidden">
        <div class="card-header">Reponse Employeur</div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-2"> </div>
                <div class="col-sm-8">
                    <fieldset>


                        <div class="form-group row">
                            <label class="col-sm-2 control-label" for="exampleInputEmail1">Resultat</label>
                            <div class="col-sm-10">
                                <input class="form-control " readonly="readonly">

                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="exampleTextarea" class="col-sm-2 control-label">Motif validation</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" readonly="readonly" id="exampleTextarea" rows="3"></textarea>
                            </div>
                        </div>
                        

                    </fieldset>
                </div>

            </div>

        </div>
    </div>
    


}

